<Defs>
  <!--====================== Bionic Iguana ===========================-->
  <ThingDef ParentName="AnimalThingBase">
    <defName>Bionic_Iguana</defName>
    <label>bionic iguana</label>
    <description>This animal was rised by mechnoids for experiments with mechanoid made bionics to make more machines of war. As those who have been modified lost theyr killer needs when leading machnoid dies animals fall to shock from pain or just start acting as regular animals.</description>
    <statBases>
      <MoveSpeed>6.50</MoveSpeed>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
      <ComfyTemperatureMax>45</ComfyTemperatureMax>
      <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
      <ArmorRating_Heat>0.3</ArmorRating_Heat>
      <MeatAmount>10</MeatAmount>
      <MarketValue>1550</MarketValue>
    </statBases>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.00</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>13</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>Right claw</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.00</cooldownTime>
        <linkedBodyPartsGroup>FrontRightClaws</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>13</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>20</power>
        <cooldownTime>1.3</cooldownTime>
        <linkedBodyPartsGroup>SteelHeadAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.3</cooldownTime>
        <linkedBodyPartsGroup>SteelHeadAttackTool</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>25</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>EggIguanaFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>15</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>
          <min>1</min>
          <max>5</max>
        </eggCountRange>
      </li>
      <li Class="CompProperties_Shearable">
        <woolDef>Steel</woolDef>
        <shearIntervalDays>10</shearIntervalDays>
        <woolAmount>10</woolAmount>
      </li>
    </comps>
    <race>
      <packAnimal>true</packAnimal>
      <herdAnimal>false</herdAnimal>
      <petness>0.15</petness>
      <body>QuadrupedBionicAnimalWithClawsTailAndJowl</body>
      <baseBodySize>0.2</baseBodySize>
      <baseHungerRate>0.1</baseHungerRate>
      <baseHealthScale>2.5</baseHealthScale>
      <predator>true</predator>
      <foodType>OmnivoreAnimal, OvivoreAnimal</foodType>
      <meatLabel>Iguana Meat</meatLabel>
      <leatherDef>Leather_Lizard</leatherDef>
      <trainability>Advanced</trainability>
      <manhunterOnDamageChance>1</manhunterOnDamageChance>
      <wildness>0.55</wildness>
      <manhunterOnTameFailChance>0.012</manhunterOnTameFailChance>
      <nuzzleMtbHours>24</nuzzleMtbHours>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>35</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.09</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.25</minAge>
          <soundWounded>Pawn_Iguana_Wounded</soundWounded>
          <soundDeath>Pawn_Iguana_Death</soundDeath>
          <soundCall>Pawn_Iguana_Call</soundCall>
          <soundAngry>Pawn_Iguana_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>
