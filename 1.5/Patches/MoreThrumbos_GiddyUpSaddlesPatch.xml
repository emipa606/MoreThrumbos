      <!--==========  Ginger Thrumbo  ==========-->
      <li Class="PatchOperationAddModExtension">
        <xpath>/Defs/ThingDef[defName = "GingerThrumbo"]</xpath>
        <value>
          <li Class="GiddyUpCore.DrawingOffsetPatch">
            <eastOffsetCSV>-0.4,0,-0.5</eastOffsetCSV>
            <westOffsetCSV>0.4,0,-0.5</westOffsetCSV>
            <northOffsetCSV>0,0,-0.5</northOffsetCSV>
