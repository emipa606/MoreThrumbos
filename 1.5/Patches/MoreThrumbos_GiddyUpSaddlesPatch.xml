        <value>
          <li Class="GiddyUpCore.CompProperties_Overlay">
            <overlaySide>
              <graphicDataDefault>
                <texPath>New/MoreThrumbos_Items/GiddyUpSaddles/GR_Saddle_MoreThrumbos_east</texPath>
                <graphicClass>Graphic_Single</graphicClass>
                <drawSize>4.8</drawSize>
                <drawRotated>false</drawRotated>
              </graphicDataDefault>
              <offsetDefault>(0,0,0,0)</offsetDefault>
            </overlaySide>
            <overlayFront>
              <graphicDataDefault>
                <texPath>New/MoreThrumbos_Items/GiddyUpSaddles/GR_Saddle_MoreThrumbos_south</texPath>
